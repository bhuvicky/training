    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:baselineAligned="false">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_list_group_name"
